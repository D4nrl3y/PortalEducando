<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_diario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.exit.portaleducando.Diario">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="DISCIPLINAS"
        android:textColor="#08213a"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Português"
        android:textSize="20dp"
        android:layout_marginTop="80dp"
        android:id="@+id/disciplina_portugues"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:src="@drawable/div"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Matemática"
        android:textSize="20dp"
        android:layout_marginTop="130dp"
        android:id="@+id/disciplina_matematica"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Geografia"
        android:textSize="20dp"
        android:layout_marginTop="180dp"
        android:id="@+id/disciplina_geografia"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="História"
        android:textSize="20dp"
        android:layout_marginTop="230dp"
        android:id="@+id/disciplina_historia"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Artes"
        android:textSize="20dp"
        android:layout_marginTop="280dp"
        android:id="@+id/disciplina_artes"
        />

</RelativeLayout>
